<Page x:Class="CarServices.Pages.Avtorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarServices.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация" ShowsNavigationUI="False">
    <Grid>

        <StackPanel Margin="0,0,150,0" VerticalAlignment="Center" Width="300" Height="auto" Background="#7F000000">
            <Label Content="Email" Grid.Row="0" Foreground="White"/>
            <TextBox x:Name="txtEmail" Grid.Row="1" Margin="0,1,0,1"/>
            <Label Content="Пароль" Grid.Row="2" Foreground="White"/>
            <PasswordBox x:Name="txtPassword" Grid.Row="3" Margin="0,1,0,1"/>

            <Button Style="{StaticResource BlackButton}" Content="Авторизация" Click="Button_Click" Height="45"/>
        </StackPanel>
    </Grid>
</Page>
